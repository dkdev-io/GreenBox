{
  "expo": {
    "name": "Green Box",
    "slug": "green-box",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.greenbox.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Green Box needs location access to share your location with trusted friends.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Green Box needs background location access to keep sharing your location with friends when the app is not active."
      }
    },
    "android": {
      "package": "com.greenbox.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "greenbox",
    "plugins": [
      "expo-location",
      "expo-apple-authentication"
    ]
  }
}
